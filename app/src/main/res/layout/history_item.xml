<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_venue_bg"
    android:paddingBottom="25dp"
    android:layout_marginBottom="25dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="25dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEventName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/dm_serif_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Inception"
        android:layout_marginLeft="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVenueName"
        app:layout_constraintTop_toBottomOf="@id/tvEventName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/dm_serif_text"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Avenue"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSelectedSeats"
        app:layout_constraintTop_toBottomOf="@id/tvVenueName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/dm_serif_text"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="F7, F8"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14_Jan_2023"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/dm_serif_text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:id="@+id/tvDate"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelBooking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="25dp"
        android:text="Cancel Booking"
        android:textAllCaps="false"
        android:fontFamily="@font/dm_serif_text"
        android:background="@drawable/rounded_card"
        android:textColor="@color/iosYellowColor"
        android:padding="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>