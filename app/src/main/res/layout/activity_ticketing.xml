<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TicketingActivity"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        android:id="@+id/cvTopNav"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:background="@color/black"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:fontFamily="@font/pacifico"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/default_profile_picture"
            app:civ_border_color="@color/app_main_color"
            android:id="@+id/civLocalUserProfilePic"
            android:layout_gravity="right"
            android:background="@color/black"
            android:paddingRight="5dp"
            />
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/hsvFilters"
        app:layout_constraintTop_toBottomOf="@+id/cvTopNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/llFilters"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="All"
                android:fontFamily="@font/dm_serif_text"
                android:textColor="@color/black"
                android:id="@+id/btnAll"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/comedy"
                android:fontFamily="@font/dm_serif_text"
                android:textColor="@color/black"
                android:id="@+id/btnComedy"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/play"
                android:fontFamily="@font/dm_serif_text"
                android:id="@+id/btnPlay"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/movie"
                android:fontFamily="@font/dm_serif_text"
                android:id="@+id/btnMovie"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGridShows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hsvFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="75dp"
        android:paddingBottom="100dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/cvAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/black"
        android:visibility="gone"
        app:cardCornerRadius="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tvHistory"
            android:layout_margin="25dp"
            android:textColor="@color/white"
            android:text="History"
            android:textAllCaps="false"
            android:fontFamily="@font/dm_serif_text"
            android:textSize="20sp"
            android:background="@drawable/rounded_button2"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tvLogout"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:text="Logout"
            android:textAllCaps="false"
            android:fontFamily="@font/dm_serif_text"
            android:textSize="20sp"
            android:background="@drawable/rounded_button2"
            android:gravity="center"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibArrowDown"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:background="@drawable/ic_baseline_arrow_drop_down_circle_24"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>